<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="12dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_descriptor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descriptor"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_descriptor_bot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_descriptor_top"
            android:src="@drawable/botto" />

        <ImageView
            android:id="@+id/iv_descriptor_top"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/totop" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_descriptor_uuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>